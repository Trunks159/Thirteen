<Human>:
	background_normal : "Picture2.png"
	background_down : "Picture1.png"
	group : "players"
	
<HowManyPlayers>:
	FloatLayout:
		id: layout
		Label:
			text : "How Many Humans"
			pos_hint : {"x" : 0, "y":.2}
		Label:
			id: shape_shifter
			text : "Play"
			size_hint : .3,.1
			pos_hint : {"right":1, "y":0}
		Grid:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.5}
			Human:
				id: two
				text: "2"
			Human:
				id: three
				text: "3"
			Human:
				id: four
				text: "4"

		Label:
			text : "How Many CPUs"
			pos_hint : {"x" : 0, "y":0}
		Grid:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.3}				
			ToggleButton:
				text: "1"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "2"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "3"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"

<PlayerGrid>:
	rows : 1
	size_hint : 1,.17
	spacing: 20
	
<HUD>:
	cols : 2
	rows : 2
	size_hint : .25, .25
	pos_hint: {"right" : 1, "y" : .17}
	
<Game>:			
	name: "game"
	FloatLayout:
		id: layout
		PlayerGrid:
			HUD:
				Button: 
					text: "Order Cards"
		PlayerGrid
			HUD:
				Button:
					text: "Order Cards"
		Field:
		
		


<Field>:
	rows : 1
	size_hint : .35,.35
	padding : 50
	pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y" : .5 - (self.size_hint[1]/2)}	
	canvas:
		Rectangle:
			pos : self.pos
			size: self.size[0],5
		Rectangle:
			pos : self.pos[0], self.pos[1] + self.size[1]
			size: self.size[0],5
		Rectangle:
			pos : self.pos
			size: 5,self.size[1]
		Rectangle:
			pos : self.pos[0] + self.size[0], self.pos[1]
			size: 5, self.size[1]



