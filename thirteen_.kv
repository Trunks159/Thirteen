<HowManyPlayers>:
	FloatLayout:
		id: layout
		Label:
			text : "How Many Humans"
			pos_hint : {"x" : 0, "y":.2}
		Grid:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.5}
			Human:
				id: two
				text: "2"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "players"
			Human:
				id: three
				text: "3"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "players"
			Human:
				id: four
				text: "4"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "players"

		Label:
			text : "How Many CPUs"
			pos_hint : {"x" : 0, "y":0}
		Grid:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.3}				
			ToggleButton:
				text: "1"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "2"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "3"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
<Game>:
	FloatLayout:
		id: lay
		
<Player>:
	rows : 1
	size_hint : 1,.17
	spacing: 20

<Field>:
	rows : 1
	size_hint : .35,.35
	pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y" : .5 - (self.size_hint[1]/2)}	
	canvas:
		Rectangle:
			pos : self.pos
			size: self.size[0],5
		Rectangle:
			pos : self.pos[0], self.pos[1] + self.size[1]
			size: self.size[0],5
		Rectangle:
			pos : self.pos
			size: 5,self.size[1]
		Rectangle:
			pos : self.pos[0] + self.size[0], self.pos[1]
			size: 5, self.size[1]
	

			

