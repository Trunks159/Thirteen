<Human>:
	background_normal : "Pictures/Button/Picture2.png"
	background_down : "Pictures/Button/Picture1.png"
	group : "players"
	
<HowManyPlayers>:
	FloatLayout:
		id: layout
		Label:
			text : "How Many Humans"
			pos_hint : {"x" : 0, "y":.2}
		Label:
			id: shape_shifter
			text : "Play"
			size_hint : .3,.1
			pos_hint : {"right":1, "y":0}
		GridLayout:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.5}
			Human:
				id: two
				text: "2"
			Human:
				id: three
				text: "3"
			Human:
				id: four
				text: "4"

		Label:
			text : "How Many CPUs"
			pos_hint : {"x" : 0, "y":0}
		GridLayout:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.3}				
			ToggleButton:
				text: "1"
				background_normal : "Pictures/Button/Picture2.png"
				background_down : "Pictures/Button/Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "2"
				background_normal : "Pictures/Button/Picture2.png"
				background_down : "Pictures/Button/Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "3"
				background_normal : "Pictures/Button/Picture2.png"
				background_down : "Pictures/Button/Picture1.png"
				group : "cpus"
<GameScreen>:
	name: "game"
	FloatLayout:
		id: layout
		canvas.before:
			Color:
				rgba: 1, .5, .5, 1
			Rectangle:
				size: [self.size[0], self.size[1] * .005]
				pos: 0, 11
			Color:
				rgba: .5, .5, 1, 1
			Rectangle:
				size: [self.size[0], self.size[1] * .005]
				pos: 0, self.size[1] * .98
		Button:
			text: "PLAYER 1"
			size_hint: .5, .5	
			pos_hint: {"x" : .5 - (self.size_hint[0]/2), "top" : 1}
			color : 1,0,0,1
		Button:
			text: "PLAYER 0"
			size_hint: .5,.5
			pos_hint: {"x" : .5 - (self.size_hint[0]/2)}
			color : 1,0,0,1
			
<PlayerGrid>:
	rows : 1
	size_hint : 1, .17
	spacing: .01*self.size[0]		

<FieldGrid>:
	canvas.before:
		Color:
			rgba: .5, .5, .5, 1
		Line:
			width:2
			rectangle: self.x, self.y, self.width, self.height
	rows : 1
	size_hint : .35,.35
	padding : 50
	pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y" : .55 - (self.size_hint[1]/2)}	
	Label:
		text: "Place Cards Here"
	

<CurrentPlayer>
	size_hint : .1, .05
	pos_hint: {"x": .02, "y": .5}
	font_size: 40
	color: 0,0,0,1

<FreePlay>:
	size_hint : .1, .05
	pos_hint: {"right" : .95, "y": .5}
	font_size: 40
	text : "Free Play"

<CombosGrid>:
	rows : 1
	size_hint : .7, .1
	pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y" : .27}	
	
<OrderButton>:
	size_hint : .12,.05
	font_size : 40
	text : "Order Hand"
	

<WinScreen>:
	name: "win"
	Label:
		text: root.player + " Has Won!"
		size_hint: .2,.2
		pos_hint: {"top":1}
	PlayAgainButton:
		text: "Play Again"
		size_hint: .2,.2
	Button:
		text: "Quit"
		size_hint: .2,.2
		pos_hint: {"right": 1}
		on_press: quit()
		
<CardImage>:
	canvas.before:
		Color:
			rgba: .5, .5, .5, 1
		Line:
			width:1 
			rectangle: self.x, self.y, self.width, self.height	
