<Human>:
	background_normal : "Picture2.png"
	background_down : "Picture1.png"
	group : "players"
	
<HowManyPlayers>:
	FloatLayout:
		id: layout
		Label:
			text : "How Many Humans"
			pos_hint : {"x" : 0, "y":.2}
		Label:
			id: shape_shifter
			text : "Play"
			size_hint : .3,.1
			pos_hint : {"right":1, "y":0}
		GridLayout:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.5}
			Human:
				id: two
				text: "2"
			Human:
				id: three
				text: "3"
			Human:
				id: four
				text: "4"

		Label:
			text : "How Many CPUs"
			pos_hint : {"x" : 0, "y":0}
		GridLayout:
			rows : 1
			size_hint : 1,.2
			pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y":.3}				
			ToggleButton:
				text: "1"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "2"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
			ToggleButton:
				text: "3"
				background_normal : "Picture2.png"
				background_down : "Picture1.png"
				group : "cpus"
<GameScreen>:
	name : "game"
	FloatLayout:
		id: layout

<PlayerGrid>:
	rows : 1
	size_hint : 1,.17
	spacing: 20

<FieldGrid>:
	rows : 1
	size_hint : .35,.35
	padding : 50
	pos_hint : {"x" : .5 - (self.size_hint[0]/2), "y" : .5 - (self.size_hint[1]/2)}	
	Label:
		text: "Place Cards Here"

<CurrentPlayer>
	size_hint : .1, .05
	pos_hint: {"x" :.7, "y": .5}
	

